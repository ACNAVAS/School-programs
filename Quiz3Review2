#include<stdio.h>
#include<math.h>

int main()
{
	
	//data declaration
	float num, result;
	//data assignment
	printf("Enter a Number: ");
	scanf("%f", &num);	
	//data processing and output
	if (num >= 0)
		printf("Square root of %.2f is %.2f\n", num, sqrt(num));
	else
		printf("%.2f is invalid!!!\n", num);
	
	system("PAUSE");
	return 0;
}
