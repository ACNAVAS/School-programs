//Program# 3
//prg3.c
//Write a program that checks if a number is odd or even then it calculates its square root if the number //is positive.
//hint: use a nested if statement for the square root under each case where the number is tested to be either odd or even.

#include<stdio.h>
#include<math.h>

int main()
{
	int num1;
	int const NUM2 = 2;
	
	
	printf("Enter a Number: ");
	scanf("%d", &num1);
	
	if (num1%NUM2 == 0)
	{
		printf("The number is Even!\n");
		if (num1 >= 0)
			printf("The square root of %.2f is %.2f\n", num1, sqrt(num1));
		else 
			printf("Invalid Entry!\n");
	}
	else
	{
		printf("The number is odd!\n");
		if (num1 >= 0)
			printf("The square root of %.2d is %.2f\n", num1, sqrt(num1));
		else 
			printf("Invalid Entry!\n");
	}
	
	
	
	system("PAUSE");
	return 0;
}
